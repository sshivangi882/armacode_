<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <listener>
        <description>ServletContextListener</description>
        <listener-class>armacode.listener.Listener1</listener-class>
    </listener>
    <context-param>
        <param-name>class</param-name>
        <param-value>oracle.jdbc.driver.OracleDriver </param-value>
    </context-param>
    <context-param>
        <param-name>path</param-name>
        <param-value>jdbc:oracle:thin:@//localhost:1521/xe</param-value>
    </context-param>
    <context-param>
        <param-name>username</param-name>
        <param-value>event_handler</param-value>
    </context-param>
    <context-param>
        <param-name>password</param-name>
        <param-value>event</param-value>
    </context-param>
    <servlet>
        <servlet-name>UserSignup</servlet-name>
        <servlet-class>armacode.controller.UserSignup</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SubmitOTP</servlet-name>
        <servlet-class>armacode.controller.SubmitOTP</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>armacode.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateEvent</servlet-name>
        <servlet-class>armacode.controller.CreateEvent</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserSignup</servlet-name>
        <url-pattern>/UserSignup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SubmitOTP</servlet-name>
        <url-pattern>/SubmitOTP</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateEvent</servlet-name>
        <url-pattern>/CreateEvent</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
